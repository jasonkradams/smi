<apex:page
  controller="CommunitiesLoginController"
  showHeader="false"
  sidebar="false"
  standardStylesheets="false"
  docType="html-5.0"
  applyBodyTag="false"
  applyHtmlTag="false"
>
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Spokane Mountaineers - Login</title>
      <link
        rel="icon"
        type="image/x-icon"
        href="{!URLFOR($Resource.favicon_ico)}"
      />

      <style>
        * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
        }

        body {
          font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
            "Helvetica Neue", Arial, sans-serif;
          min-height: 100vh;
          display: flex;
          align-items: center;
          justify-content: center;
          background: url("{!URLFOR($Resource.Login_Background)}") center/cover
            no-repeat fixed;
          padding: 20px;
        }

        .login-container {
          background: #47b3e9;
          border-radius: 20px;
          box-shadow: 0 25px 60px rgba(0, 0, 0, 0.25);
          max-width: 440px;
          width: 100%;
          padding: 48px 40px;
          animation: slideUp 0.5s ease-out;
        }

        @keyframes slideUp {
          from {
            opacity: 0;
            transform: translateY(30px);
          }
          to {
            opacity: 1;
            transform: translateY(0);
          }
        }

        .logo-container {
          text-align: center;
          margin-bottom: 32px;
        }

        .logo {
          width: 120px;
          height: 120px;
          margin-bottom: 16px;
        }

        h1 {
          font-size: 28px;
          font-weight: 700;
          color: #1a1a1a;
          text-align: center;
          margin-bottom: 8px;
        }

        .subtitle {
          color: #666;
          text-align: center;
          font-size: 14px;
          line-height: 1.6;
          margin-bottom: 32px;
        }

        .subtitle small {
          display: block;
          margin-top: 8px;
          font-size: 12px;
          color: #999;
        }

        .form-group {
          margin-bottom: 24px;
          position: relative;
        }

        label {
          display: block;
          font-size: 14px;
          font-weight: 600;
          color: #333;
          margin-bottom: 8px;
        }

        .input-wrapper {
          position: relative;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"] {
          width: 100%;
          padding: 14px 16px;
          border: 2px solid #e0e0e0;
          border-radius: 10px;
          font-size: 15px;
          transition: all 0.2s ease;
          background: #f9f9f9;
        }

        input[type="password"] {
          padding-right: 48px;
        }

        input:focus {
          outline: none;
          border-color: #2a5298;
          background: white;
          box-shadow: 0 0 0 4px rgba(42, 82, 152, 0.1);
        }

        input::placeholder {
          color: #999;
        }

        .password-toggle {
          position: absolute;
          right: 12px;
          top: 50%;
          transform: translateY(-50%);
          background: none;
          border: none;
          cursor: pointer;
          color: #666;
          padding: 8px;
          display: flex;
          align-items: center;
          justify-content: center;
          transition: color 0.2s ease;
        }

        .password-toggle:hover {
          color: #2a5298;
        }

        .password-toggle svg {
          width: 20px;
          height: 20px;
        }

        .checkbox-group {
          display: flex;
          align-items: center;
          margin-bottom: 24px;
        }

        input[type="checkbox"] {
          width: 18px;
          height: 18px;
          margin-right: 8px;
          cursor: pointer;
          accent-color: #2a5298;
        }

        .btn-primary {
          width: 100%;
          padding: 16px;
          background: linear-gradient(135deg, #104f13 0%, #09510d 100%);
          color: white;
          border: none;
          border-radius: 10px;
          font-size: 16px;
          font-weight: 600;
          cursor: pointer;
          transition: all 0.3s ease;
          margin-top: 8px;
          position: relative;
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 8px;
        }

        .btn-primary:hover:not(:disabled) {
          transform: translateY(-2px);
          box-shadow: 0 12px 24px rgba(42, 82, 152, 0.3);
        }

        .btn-primary:active:not(:disabled) {
          transform: translateY(0);
        }

        .btn-primary:disabled {
          opacity: 0.7;
          cursor: not-allowed;
        }

        .spinner {
          width: 20px;
          height: 20px;
          border: 3px solid rgba(255, 255, 255, 0.3);
          border-top-color: white;
          border-radius: 50%;
          animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
          to {
            transform: rotate(360deg);
          }
        }

        .divider {
          display: flex;
          align-items: center;
          text-align: center;
          margin: 32px 0;
          color: #999;
          font-size: 14px;
        }

        .divider::before,
        .divider::after {
          content: "";
          flex: 1;
          border-bottom: 1px solid #e0e0e0;
        }

        .divider span {
          padding: 0 16px;
        }

        .btn-google {
          width: 100%;
          padding: 14px;
          background: white;
          border: 2px solid #e0e0e0;
          border-radius: 10px;
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 12px;
          font-size: 15px;
          font-weight: 600;
          color: #333;
          cursor: pointer;
          transition: all 0.2s ease;
          text-decoration: none;
        }

        .btn-google:hover {
          background: #f9f9f9;
          border-color: #d0d0d0;
          transform: translateY(-1px);
        }

        .links-container {
          margin-top: 20px;
          text-align: center;
        }

        .link {
          color: #2a5298;
          text-decoration: none;
          font-size: 14px;
          font-weight: 500;
          transition: color 0.2s ease;
        }

        .link:hover {
          color: #1e3c72;
          text-decoration: underline;
        }

        .help-text {
          margin-top: 24px;
          padding-top: 24px;
          border-top: 1px solid #e0e0e0;
          font-size: 13px;
          color: #666;
          line-height: 1.6;
        }

        .help-text p {
          margin-bottom: 8px;
        }

        .help-text strong {
          color: #333;
        }

        .error-message {
          background: #fee;
          border-left: 4px solid #f44;
          padding: 12px 16px;
          border-radius: 8px;
          margin-bottom: 20px;
          font-size: 14px;
          color: #c33;
        }

        .success-message {
          background: #efe;
          border-left: 4px solid #4c4;
          padding: 12px 16px;
          border-radius: 8px;
          margin-bottom: 20px;
          font-size: 14px;
          color: #363;
        }

        @media (max-width: 480px) {
          .login-container {
            padding: 32px 24px;
            border-radius: 16px;
          }

          h1 {
            font-size: 24px;
          }

          .logo {
            width: 100px;
            height: 100px;
          }
        }
      </style>
    </head>

    <body>
      <div class="login-container">
        <div class="logo-container">
          <!-- Logo image - replace with actual resource -->
          <img
            src="{!$Resource.Logoclear2}"
            alt="Spokane Mountaineers Logo"
            class="logo"
          />

          <h1>Welcome Back</h1>
          <p class="subtitle">Sign in to your Spokane Mountaineers account</p>
        </div>

        <apex:form id="loginForm">
          <!-- Error Messages -->
          <apex:outputPanel rendered="{!hasError}">
            <div class="error-message">
              <apex:pageMessages />
            </div>
          </apex:outputPanel>

          <!-- Username Field -->
          <div class="form-group">
            <label for="username">Email Address</label>
            <div class="input-wrapper">
              <apex:inputText
                id="username"
                value="{!username}"
                html-placeholder="your.email@example.com"
                styleClass="form-input"
              />
            </div>
          </div>

          <!-- Password Field with Toggle -->
          <div class="form-group">
            <label for="password">Password</label>
            <div class="input-wrapper">
              <apex:inputSecret
                id="password"
                value="{!password}"
                html-placeholder="Enter your password"
                styleClass="form-input password-input"
              />

              <button
                type="button"
                class="password-toggle"
                onclick="
                  togglePassword('{!$Component.password}', this);
                  return false;
                "
                aria-label="Show password"
              >
                <!-- Eye Icon (Show) -->
                <svg
                  class="eye-show"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  />
                </svg>

                <!-- Eye Off Icon (Hide) -->
                <svg
                  class="eye-hide"
                  style="display: none"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"
                  />
                </svg>
              </button>
            </div>
          </div>

          <script>
            function togglePassword(inputId, button) {
              var input = document.getElementById(inputId);
              var eyeShow = button.querySelector(".eye-show");
              var eyeHide = button.querySelector(".eye-hide");

              if (input.type === "password") {
                input.type = "text";
                eyeShow.style.display = "none";
                eyeHide.style.display = "block";
                button.setAttribute("aria-label", "Hide password");
              } else {
                input.type = "password";
                eyeShow.style.display = "block";
                eyeHide.style.display = "none";
                button.setAttribute("aria-label", "Show password");
              }
            }
          </script>

          <!-- Login Button with Loading State -->
          <apex:commandButton
            action="{!login}"
            value="Sign In"
            styleClass="btn-primary"
            reRender="loginForm"
            onclick="
              this.disabled = true;
              this.value = 'Signing in...';
            "
            oncomplete="this.disabled=false; this.value='Sign In';"
          />

          <div class="links-container">
            <a href="{!forgotPasswordUrl}" class="link"
              >Forgot your password?</a
            >
          </div>

          <div class="divider">
            <span>OR</span>
          </div>

          <!-- Google Sign In Button -->
          <a href="{!googleLoginUrl}" class="btn-google">
            <svg width="20" height="20" viewBox="0 0 20 20">
              <path
                fill="#4285F4"
                d="M19.6 10.23c0-.82-.1-1.42-.25-2.05H10v3.72h5.5c-.15.96-.74 2.31-2.04 3.22v2.45h3.16c1.89-1.73 2.98-4.3 2.98-7.34z"
              />
              <path
                fill="#33A854"
                d="M13.46 15.13c-.83.59-1.96 1-3.46 1-2.64 0-4.88-1.74-5.68-4.15H1.07v2.52C2.72 17.75 6.09 20 10 20c2.7 0 4.96-.89 6.62-2.42l-3.16-2.45z"
              />
              <path
                fill="#FBBC04"
                d="M3.99 10c0-.69.12-1.35.32-1.97V5.51H1.07A9.973 9.973 0 000 10c0 1.61.39 3.14 1.07 4.49l3.24-2.52c-.2-.62-.32-1.28-.32-1.97z"
              />
              <path
                fill="#E94236"
                d="M10 3.88c1.88 0 3.13.81 3.85 1.48l2.84-2.76C14.96.99 12.7 0 10 0 6.09 0 2.72 2.25 1.07 5.51l3.24 2.52C5.12 5.62 7.36 3.88 10 3.88z"
              />
            </svg>
            Continue with Google
          </a>
        </apex:form>

        <div class="help-text">
          <p><strong>New to the Mountaineers?</strong></p>
          <p>
            <a
              href="{!$Label.Community_Join_URL}"
              class="link"
              target="_blank"
              rel="noopener noreferrer"
              >Join now to get started!</a
            >
          </p>

          <p style="margin-top: 16px">
            <strong>Need to renew your membership?</strong>
          </p>
          <p>
            <a
              href="{!$Label.Community_Renew_URL}"
              class="link"
              target="_blank"
              rel="noopener noreferrer"
              >Renew here</a
            >
          </p>

          <p style="margin-top: 16px">
            <strong>Questions about your account?</strong>
          </p>
          <p>
            Contact us at
            <a href="mailto:{!$Label.Community_Support_Email}" class="link"
              >{!$Label.Community_Support_Email}</a
            >
          </p>

          <p
            style="
              margin-top: 24px;
              padding-top: 16px;
              border-top: 1px solid #e0e0e0;
              font-size: 12px;
              color: #999;
              text-align: center;
            "
          >
            <a href="{!adminLoginUrl}" class="link" style="color: #999">
              Are you a system admin? Login here
            </a>
          </p>
        </div>
      </div>
    </body>
  </html>
</apex:page>
